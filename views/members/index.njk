{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
  <a href="/members/create">Novo</a>
  <table width="100%">
    <thead> {# head da table #}
      <tr> {# cada linha na tabela é uma tr #}
        <th>Membro</th> {# coluna da tabela no thead #}
        <th>Email</th>
        <th>Peso</th>
        <th>Altura</th>
        <th>Ação</th>
      </tr>
    </thead>

    <tbody>
        {% for member in members %}
          <tr>
            <td>
              <span style="background-image: url({{member.avatar_url}})"></span>
              {{member.name}}
            </td> {# coluna da tabela no tbody #}
            <td>{{member.email}}</td>
            <td>{{member.weight}}kg</td>
            <td>{{member.height}}cm</td>
            <td><a href="/members/{{member.id}}">ver</a></td>
          </tr>
        {% endfor %}
    </tbody>

  </table>
</div>


{% endblock content %}

